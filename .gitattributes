# Set default behavior to automatically normalize line endings
* text=auto

# Force LF for shell scripts
*.sh text eol=lf

# Force LF for Python files
*.py text eol=lf
*.pyi text eol=lf

# Force LF for JavaScript/TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Force LF for config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.md text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary